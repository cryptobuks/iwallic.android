<resources>

    <!-- Base application theme. -->
    <style name="ThemeDefault" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/colorPrimaryDarkDefault</item>
        <item name="colorPrimary">@color/colorPrimaryDefault</item>
        <item name="colorDanger">@color/colorDangerDefault</item>
        <item name="colorDark">@color/colorDarkDefault</item>
        <item name="colorDefault">@color/colorDefaultDefault</item>
        <item name="colorDefault2">@color/colorDefault2Default</item>
        <item name="colorLight">@color/colorLightDefault</item>
        <item name="colorSecondary">@color/colorSecondaryDefault</item>
        <item name="colorLine">@color/colorLineDefault</item>
        <item name="colorLine2">@color/colorLine2Default</item>
        <item name="colorFont">@color/colorFontDefault</item>
        <item name="colorFont2">@color/colorFont2Default</item>
        <item name="colorFont3">@color/colorFont3Default</item>
        <item name="selectorOptionItem">@drawable/selector_optionitem_default</item>
        <item name="colorButtonNormal">@color/colorPrimaryDefault</item>
        <item name="drawableAssetBg">@drawable/bg_asset</item>
        <item name="drawableAssetDetailBg">@drawable/bg_asset_detail</item>
    </style>

    <style name="ThemeNight" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimaryDark">@color/colorPrimaryDarkNight</item>
        <item name="colorPrimary">@color/colorPrimaryNight</item>
        <item name="colorDanger">@color/colorDangerNight</item>
        <item name="colorDark">@color/colorDarkNight</item>
        <item name="colorDefault">@color/colorDefaultNight</item>
        <item name="colorDefault2">@color/colorDefault2Night</item>
        <item name="colorLight">@color/colorLightNight</item>
        <item name="colorSecondary">@color/colorSecondaryNight</item>
        <item name="colorLine">@color/colorLineNight</item>
        <item name="colorLine2">@color/colorLine2Night</item>
        <item name="colorFont">@color/colorFontNight</item>
        <item name="colorFont2">@color/colorFont2Night</item>
        <item name="colorFont3">@color/colorFont3Night</item>
        <item name="selectorOptionItem">@drawable/selector_optionitem_night</item>
        <item name="colorButtonNormal">@color/colorPrimaryNight</item>
        <item name="drawableAssetBg">@drawable/bg_asset_dark</item>
        <item name="drawableAssetDetailBg">@drawable/bg_asset_detail_dark</item>
    </style>

    <style name="PageFullScreen" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="qrcode_container">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/dimenSmall</item>
        <item name="android:layout_marginTop">@dimen/dimenLarge</item>
        <item name="android:layout_marginBottom">@dimen/dimenSpace</item>
        <item name="android:background">@drawable/shape_border_radius</item>
    </style>

    <!-- 操作项样式 start -->

    <style name="option_item_rl">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">true</item>
        <item name="android:padding">@dimen/dimenSpace</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">?selectorOptionItem</item>
    </style>

    <style name="option_item_img">
        <item name="android:layout_width">@dimen/dimenIcon</item>
        <item name="android:layout_height">@dimen/dimenIcon</item>
        <item name="android:layout_marginRight">@dimen/dimenSpace</item>
        <item name="android:contentDescription">@null</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="option_item_imgarrow" parent="@style/option_item_img">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginRight">0dp</item>
        <item name="android:tint">?colorFont2</item>
    </style>

    <style name="option_item_text_parent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">@dimen/dimenMini</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">?colorFont</item>
        <item name="android:clickable">false</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textSize">@dimen/dimenDefault</item>
    </style>

    <style name="option_item_text" parent="@style/option_item_text_parent">
        <item name="android:drawablePadding">@dimen/dimenSmall</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">?colorFont</item>
    </style>

    <!-- 操作项样式end -->

    <style name="option_item_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dimenLine</item>
        <item name="android:background">?colorLine</item>
        <item name="android:layout_marginStart">@dimen/dimenSpace</item>
    </style>
    <style name="option_item_line_full" parent="@style/option_item_line">
        <item name="android:layout_marginStart">0dp</item>
    </style>
</resources>
