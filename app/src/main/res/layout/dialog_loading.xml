<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/shape_loader"
    android:orientation="horizontal"
    android:gravity="center"
    android:padding="@dimen/dimenSpace">
    <ProgressBar
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:indeterminateTint="?colorLight"
        android:layout_marginStart="@dimen/dimenSpace"
        android:layout_marginEnd="@dimen/dimenSpace"
        tools:targetApi="lollipop" />
    <TextView
        android:id="@+id/dialog_loading_text"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="?colorLight"
        android:textSize="@dimen/dimenFontL"/>
</LinearLayout>