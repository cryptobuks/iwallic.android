<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#55000000"
    android:layout_marginBottom="@dimen/dimenMini">
    <FrameLayout
        android:id="@+id/adapter_wallet_history_enter"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/dimenDefault">
            <TextView
                android:id="@+id/adapter_wallet_history_snapshot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="?colorLight"
                android:textSize="@dimen/dimenFont"
                android:lines="1"
                android:ellipsize="end"/>
            <TextView
                android:id="@+id/adapter_wallet_history_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="?colorLight"
                android:layout_marginTop="@dimen/dimenMini"
                android:textSize="@dimen/dimenFontM"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?android:attr/selectableItemBackground" />
    </FrameLayout>
    <ImageView
        android:id="@+id/adapter_wallet_history_del"
        android:contentDescription="@null"
        android:layout_width="@dimen/dimenLarge"
        android:layout_height="@dimen/dimenLarge"
        android:src="@drawable/icon_delete"
        android:tint="?colorLight"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/dimenSpace"
        android:layout_marginEnd="@dimen/dimenSpace"/>
</LinearLayout>