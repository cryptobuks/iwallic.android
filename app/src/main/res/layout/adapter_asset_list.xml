<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:layout_height="70dp"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:clickable="true"
    android:focusable="true"
    android:background="?colorDefault">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/dimenLarge"
        android:layout_marginEnd="@dimen/dimenLarge"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/asset_list_name"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="?colorFont"
            android:layout_gravity="center_vertical|start"
            android:text="NEO"
            android:textSize="@dimen/dimenDefault"/>

        <TextView
            android:id="@+id/asset_list_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|end"
            android:text="99999999.99999999"
            android:textColor="?colorFont"
            android:textSize="@dimen/dimenDefault" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimenLine"
        android:background="?colorLine"
        android:layout_gravity="bottom"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?android:attr/selectableItemBackground" />
</FrameLayout>