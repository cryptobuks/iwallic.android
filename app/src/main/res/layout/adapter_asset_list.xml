<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:clickable="true"
    android:focusable="true">
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="?colorDefault">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dimenSpace"
            android:orientation="horizontal">
            <ImageView
                android:visibility="gone"
                android:id="@+id/asset_list_icon"
                android:layout_width="@dimen/dimenLarge"
                android:layout_height="@dimen/dimenLarge"
                android:src="@drawable/icon_coin"
                android:tint="?colorPrimary"
                android:layout_margin="@dimen/dimenSpace"/>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="@dimen/dimenSpace"
                android:paddingEnd="@dimen/dimenSpace"
                android:paddingTop="@dimen/dimenSpace"
                android:paddingBottom="@dimen/dimenSpace">
                <TextView
                    android:id="@+id/asset_list_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="?colorFont"
                    android:layout_gravity="start"
                    android:text="资产名"
                    android:textSize="@dimen/dimenDefault"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/asset_list_balance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:text="99999999.99999999"
                    android:textColor="?colorFont"
                    android:textSize="@dimen/dimenDefault" />
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimenLine"
            android:background="?colorLine"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?android:attr/selectableItemBackground" />
</FrameLayout>