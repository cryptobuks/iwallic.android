<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:clickable="true"
    android:focusable="true"
    android:background="?colorDefault">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/dimenIcon">
        <TextView
            android:id="@+id/asset_list_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?colorFont"
            android:layout_centerInParent="true"
            android:layout_alignParentStart="true"
            android:text="NEO"
            android:textSize="@dimen/dimenDefault"/>

        <TextView
            android:id="@+id/asset_list_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_alignParentEnd="true"
            android:text="99999999.99999999"
            android:textColor="?colorFont"
            android:textSize="@dimen/dimenDefault" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimenLine"
        android:background="?colorLine"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?android:attr/selectableItemBackground" />
</FrameLayout>