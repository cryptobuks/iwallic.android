<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?colorDefault"
    tools:ignore="EllipsizeMaxLines,RtlHardcoded"
    android:fitsSystemWindows="false"
    android:orientation="vertical"
    tools:context=".pages.transaction.TransactionDetailActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="?colorPrimary">

        <LinearLayout
            android:id="@+id/transaction_detail_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimenSmall"
            android:layout_gravity="center_vertical|left"
            android:clickable="true"
            android:focusable="true">
            <ImageView
                android:contentDescription="@null"
                android:layout_width="@dimen/dimenLarge"
                android:layout_height="@dimen/dimenLarge"
                android:scaleType="fitXY"
                android:tint="?colorDefault"
                android:src="@drawable/icon_back"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My Transactions"
                android:textColor="?colorDefault"
                android:layout_gravity="center"
                android:textSize="@dimen/dimenDefault"/>
        </LinearLayout>
    </FrameLayout>

    <ProgressBar
        android:id="@+id/transaction_detail_load"
        android:visibility="visible"
        android:layout_margin="@dimen/dimenSpace"
        android:foregroundTint="?colorPrimary"
        android:layout_width="@dimen/dimenLarge"
        android:layout_height="@dimen/dimenLarge"
        android:layout_gravity="center"
        tools:targetApi="lollipop" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingVertical="12dp">

            <TextView
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:text="区块高度"
                android:gravity="center_vertical"
                android:layout_width="match_parent"/>
            <TextView
                android:id="@+id/transaction_detail_txBlockIndex"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="12333"
                android:gravity="center_vertical"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?colorLine"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingVertical="12dp">
            <TextView
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:text="交易 ID"
                android:gravity="center_vertical"
                android:layout_width="match_parent" />
            <TextView
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:id="@+id/transaction_detail_txid"
                android:layout_height="wrap_content"
                android:text="txid"
                android:gravity="center_vertical"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?colorLine"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingVertical="12dp">
            <TextView
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:text="交易时间"
                android:gravity="center_vertical"
                android:layout_width="match_parent" />
            <TextView
                android:id="@+id/transaction_detail_txTime"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="2018-07-17 12:12:12"
                android:gravity="center_vertical"/>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?colorLine"/>

        <TextView
            android:id="@+id/transaction_detail_from"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="来自"
            android:paddingVertical="12dp"
            android:gravity="center"
            android:textColor="@color/colorPrimaryDarkDefault"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/transaction_detail_list_from"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/transaction_detail_to"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingVertical="12dp"
            android:text="发给"
            android:textColor="@color/colorPrimaryDarkDefault"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/transaction_detail_list_to"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>
</LinearLayout>
