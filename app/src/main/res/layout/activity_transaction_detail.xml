<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?colorDefault"
    tools:ignore="EllipsizeMaxLines,RtlHardcoded"
    android:fitsSystemWindows="false"
    android:orientation="vertical"
    tools:context=".pages.transaction.TransactionDetailActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="?colorPrimary">

        <LinearLayout
            android:id="@+id/transaction_detail__back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimenSmall"
            android:layout_gravity="center_vertical|left"
            android:clickable="true"
            android:focusable="true">
            <ImageView
                android:contentDescription="@null"
                android:layout_width="@dimen/dimenLarge"
                android:layout_height="@dimen/dimenLarge"
                android:scaleType="fitXY"
                android:tint="?colorDefault"
                android:src="@drawable/icon_back"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My Transactions"
                android:textColor="?colorDefault"
                android:layout_gravity="center"
                android:textSize="@dimen/dimenDefault"/>
        </LinearLayout>
    </FrameLayout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingVertical="12dp">

            <TextView
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:text="交易类型"
                android:gravity="center_vertical"
                android:layout_width="match_parent"/>
            <TextView
                android:id="@+id/transaction_detail_txType"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Invocation"
                android:gravity="center_vertical"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?colorLine"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingVertical="12dp">
            <TextView
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:text="交易 ID"
                android:gravity="center_vertical"
                android:layout_width="match_parent" />
            <TextView
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:id="@+id/transaction_detail_txid"
                android:layout_height="wrap_content"
                android:text="txid"
                android:gravity="center_vertical"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?colorLine"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingVertical="12dp">
            <TextView
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:text="交易时间"
                android:gravity="center_vertical"
                android:layout_width="match_parent" />
            <TextView
                android:id="@+id/transaction_detail_txTime"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="2018-07-17 12:12:12"
                android:gravity="center_vertical"/>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?colorLine"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingVertical="12dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="发给"
                android:gravity="center"/>
            <TextView
                android:id="@+id/transaction_detail_txFromAddr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ASH41gtWftHvhuYhZz1jj7ee7z9vp9D9wk"
                android:gravity="center"
                android:textColor="@color/colorPrimaryDarkDefault"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/transaction_detail_txFromValue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="0.000001"
                    android:gravity="right"
                    android:paddingRight="12dp"/>
                <TextView
                    android:id="@+id/transaction_detail_txFromName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="NEO"
                    android:gravity="left"
                    android:paddingLeft="12dp"
                    android:textColor="@color/colorPrimaryDarkDefault"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingVertical="12dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="来自"
                android:gravity="center"/>
            <TextView
                android:id="@+id/transaction_detail_txToAddr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="APKpVfc3annbFqB1qebmKVD6LyCbp1UX6C"
                android:gravity="center"
                android:textColor="@color/colorPrimaryDarkDefault"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/transaction_detail_txToValue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="0.000001"
                    android:gravity="right"
                    android:paddingRight="12dp"/>
                <TextView
                    android:id="@+id/transaction_detail_txToName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="NEO"
                    android:gravity="left"
                    android:paddingLeft="12dp"
                    android:textColor="@color/colorPrimaryDarkDefault"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
