<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shap_receive_bg"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="32dp">

            <LinearLayout
                android:id="@+id/transaction_receive_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|start"
                android:layout_marginStart="@dimen/dimenSmall"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="@dimen/dimenLarge"
                    android:layout_height="@dimen/dimenLarge"
                    android:contentDescription="@string/wallet_import"
                    android:scaleType="fitXY"
                    android:src="@drawable/icon_back"
                    android:tint="?colorDefault" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/transaction_receive"
                    android:textColor="?colorDefault"
                    android:textSize="@dimen/dimenDefault" />
            </LinearLayout>
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/transaction_receive_qrcode_box"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimenLarge"
                android:background="@drawable/shape_border_radius_default"
                android:orientation="vertical"
                android:padding="@dimen/dimenDefault">
                <ImageView
                    android:contentDescription="@null"
                    android:id="@+id/transaction_receive_qrcode"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    android:background="?colorDefault2"/>

                <TextView
                    android:id="@+id/transaction_receive_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="200dp"
                    android:textColor="?colorFont"
                    android:layout_gravity="center"
                    android:text="AddressAddressAddressAddressAddressAddressAddress"
                    android:layout_marginTop="@dimen/dimenSpace"
                    android:textAlignment="center" />
            </LinearLayout>

            <Button
                android:id="@+id/transaction_receive_address_copy"
                android:layout_width="200dp"
                android:layout_marginTop="@dimen/dimenLarge"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:text="@string/transaction_receive_address_copy"
                android:textColor="?colorDefault"/>
        </LinearLayout>
    </LinearLayout>
