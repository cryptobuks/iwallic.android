<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="?colorDefault">

    <TextView
        android:id="@+id/asset_manage_name"
        android:padding="@dimen/dimenDefault"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="?colorFont"
        android:layout_alignParentStart="true"
        android:layout_centerInParent="true"
        android:text="NEO"
        android:textSize="@dimen/dimenDefault"/>


    <android.support.v7.widget.SwitchCompat
        android:id="@+id/asset_manage_toggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:text=""
        android:padding="@dimen/dimenDefault"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimenLine"
        android:layout_alignParentBottom="true"
        android:background="?colorLine"/>
</RelativeLayout>