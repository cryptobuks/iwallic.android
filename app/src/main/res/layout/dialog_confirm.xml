<LinearLayout android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:minWidth="260dp"
    android:background="@drawable/shape_border_radius_default"
    android:layout_gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical">
    <TextView
        android:id="@+id/dialog_confirm_title"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:textSize="@dimen/dimenFont"
        android:textStyle="bold"
        android:textColor="@color/colorFontDefault"/>
    <View android:layout_width="match_parent"
        android:layout_height="@dimen/dimenLine"
        android:background="@color/colorDefault2Default"/>
    <TextView
        android:id="@+id/dialog_confirm_msg"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:maxWidth="260dp"
        android:minHeight="80dp"
        android:textSize="@dimen/dimenFont"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/colorFont3Default"
        android:padding="@dimen/dimenSpace"
        android:gravity="start|center_vertical"
        android:maxLines="8"
        android:ellipsize="end"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimenLine"
        android:background="@color/colorDefault2Default"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/dialog_confirm_ok"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/dimenFont"
            android:textStyle="bold"
            android:textColor="?colorPrimary"/>
        <View
            android:layout_width="@dimen/dimenLine"
            android:layout_height="match_parent"
            android:background="@color/colorDefault2Default"/>
        <TextView
            android:id="@+id/dialog_confirm_no"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/dimenFont"
            android:textColor="@color/colorFontDefault"/>
    </LinearLayout>
</LinearLayout>