<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:background="?colorDefault">
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimenMini"
        android:background="?colorPrimary"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimenSpace"
        android:gravity="center">
        <TextView
            android:id="@+id/dialog_confirm_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?colorPrimary"
            android:text="@string/dialog_title_primary"
            android:layout_gravity="center"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimenLine"
        android:background="?colorLine"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimenLarge"
        android:gravity="center">
        <TextView
            android:id="@+id/dialog_confirm_body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?colorFont"
            android:text=""/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimenLine"
        android:background="?colorLine"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/dialog_confirm_ok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="?colorPrimary"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/dimenSpace"
            android:textStyle="bold"
            android:text="@string/dialog_ok"
            android:clickable="true"
            android:background="?selectorOptionItem"/>
        <View
            android:layout_width="@dimen/dimenLine"
            android:layout_height="match_parent"
            android:background="?colorLine"/>
        <TextView
            android:id="@+id/dialog_confirm_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dimenSpace"
            android:textColor="?colorFont3"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/dialog_no"
            android:clickable="true"
            android:background="?selectorOptionItem"/>
    </LinearLayout>
</LinearLayout>