<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:minWidth="260dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:background="?colorDefault">
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimenMini"
        android:background="?colorPrimary"/>
    <TextView
        android:id="@+id/dialog_confirm_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="?colorPrimary"
        android:text="@string/dialog_title_primary"
        android:padding="@dimen/dimenSpace"
        android:layout_gravity="center"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimenLine"
        android:background="?colorLine"/>
    <TextView
        android:id="@+id/dialog_confirm_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimenSpace"
        android:minHeight="60dp"
        android:gravity="center_vertical|start"
        android:layout_gravity="center_horizontal"
        android:textColor="?colorFont"
        android:maxWidth="260dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimenLine"
        android:background="?colorLine"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/dialog_confirm_ok"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textColor="?colorPrimary"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/dimenSpace"
            android:textStyle="bold"
            android:text="@string/dialog_ok"
            android:background="?selectorOptionItem"/>
        <View
            android:layout_width="@dimen/dimenLine"
            android:layout_height="match_parent"
            android:background="?colorLine"/>
        <TextView
            android:id="@+id/dialog_confirm_no"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:padding="@dimen/dimenSpace"
            android:textColor="?colorFont3"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/dialog_no"
            android:background="?selectorOptionItem"/>
    </LinearLayout>
</LinearLayout>