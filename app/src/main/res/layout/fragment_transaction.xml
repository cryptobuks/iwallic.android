<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_transaction"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?colorDefault"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="?colorPrimary">
        <View
            android:id="@+id/app_top_space"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimenStatusBar"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimenTopBar">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/fragment_transaction_title"
                android:textColor="?colorDefault"
                android:textSize="@dimen/dimenDefault"/>

            <LinearLayout
                android:id="@+id/transaction_unconfirmed_enter"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dimenSmall"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/fragment_transaction_unconfirmed"
                    android:textColor="?colorDefault"
                    android:textSize="@dimen/dimenDefault"/>
                <ImageView
                    android:contentDescription="@null"
                    android:layout_width="@dimen/dimenDefault"
                    android:layout_height="@dimen/dimenDefault"
                    android:src="@drawable/icon_arrowright"
                    android:tint="?colorDefault"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <ProgressBar
        android:id="@+id/fragment_transaction_load"
        android:visibility="visible"
        android:layout_margin="@dimen/dimenSpace"
        android:foregroundTint="?colorPrimary"
        android:layout_width="@dimen/dimenLarge"
        android:layout_height="@dimen/dimenLarge"
        android:layout_gravity="center"
        tools:targetApi="lollipop" />

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/transaction_list_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/transaction_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </android.support.v4.widget.SwipeRefreshLayout>
</LinearLayout>