<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pages.wallet.WalletImportActivity">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimenTopBar"
        android:background="?colorPrimary">

        <LinearLayout
            android:id="@+id/wallet_import_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimenSmall"
            android:layout_gravity="center_vertical|start"
            android:clickable="true"
            android:focusable="true">
            <ImageView
                android:layout_width="@dimen/dimenLarge"
                android:layout_height="@dimen/dimenLarge"
                android:scaleType="fitXY"
                android:tint="?colorDefault"
                android:contentDescription="@string/wallet_import"
                android:src="@drawable/icon_back"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/wallet_import"
                android:textColor="?colorDefault"
                android:layout_gravity="center"
                android:textSize="@dimen/dimenDefault"/>
        </LinearLayout>
    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dimenSpace"
                android:text="@string/wallet_import_tip"
                android:background="?colorPrimary"
                android:textColor="?colorDefault"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="?colorDefault">
                <EditText
                    android:id="@+id/wallet_import_wif"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:layout_marginTop="@dimen/dimenSpace"
                    android:inputType="textMultiLine"
                    android:textSize="@dimen/dimenDefault"
                    android:background="?colorDefault"
                    android:padding="@dimen/dimenSpace"
                    android:hint="@string/wallet_import_wif_hint"
                    android:textColor="?colorFont"
                    android:focusedByDefault="true"
                    android:minLines="3"
                    android:gravity="top|start"
                    tools:targetApi="o" />
                <ImageView
                    android:padding="@dimen/dimenMini"
                    android:id="@+id/wallet_import_scan"
                    android:layout_marginStart="@dimen/dimenSpace"
                    android:layout_marginEnd="@dimen/dimenSpace"
                    android:layout_width="@dimen/dimenLarge"
                    android:layout_height="@dimen/dimenLarge"
                    android:src="@drawable/icon_scan"
                    android:tint="?colorPrimary"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>

            <EditText
                android:id="@+id/wallet_import_pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:layout_marginTop="@dimen/dimenSpace"
                android:inputType="textPassword"
                android:background="?colorDefault"
                android:textSize="@dimen/dimenDefault"
                android:padding="@dimen/dimenSpace"
                android:hint="@string/wallet_create_pwd_hint"
                android:textColor="?colorFont"
                android:focusedByDefault="true"
                tools:targetApi="o" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimenLine"
                android:background="?colorLine"/>

            <EditText
                android:id="@+id/wallet_import_confirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/wallet_create_confirm_hint"
                android:inputType="textPassword"
                android:padding="@dimen/dimenSpace"
                android:textSize="@dimen/dimenDefault"
                android:background="?colorDefault"
                android:textColor="?colorFont" />

            <TextView
                android:id="@+id/wallet_import_error"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/dimenSpace"
                android:paddingEnd="@dimen/dimenSpace"
                android:paddingTop="@dimen/dimenSpace"
                android:textColor="?colorDanger"
                android:visibility="invisible"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimenSpace">
                <Button
                    android:id="@+id/wallet_import_btn_wif"
                    android:layout_width="match_parent"
                    android:visibility="visible"
                    android:layout_height="wrap_content"
                    android:textColor="?colorDefault"
                    android:layout_gravity="center"
                    android:text="@string/wallet_import_btn_wif" />
                <ProgressBar
                    android:id="@+id/wallet_import_load_wif"
                    android:visibility="invisible"
                    android:foregroundTint="?colorPrimary"
                    android:layout_width="@dimen/dimenLarge"
                    android:layout_height="@dimen/dimenLarge"
                    android:layout_gravity="center"
                    tools:targetApi="lollipop" />
            </FrameLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/wallet_import_btn_file"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_margin="@dimen/dimenSpace"
                android:textColor="?colorDefault"
                android:text="@string/wallet_import_btn_file" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>